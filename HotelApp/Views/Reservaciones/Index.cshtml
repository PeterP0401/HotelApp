                @Html.DisplayFor(modelItem => item.Email_R)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre_R)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellidos_R)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha_Entrada_R)
